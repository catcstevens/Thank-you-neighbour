<%= form_with(model: @listing, local: true) do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    <div>
        <%= form.label :description %>
        <%= form.text_area :description %>
    </div>
    <div>
        <%= form.label :price %>
        <%= form.number_field :price, min: 0 %>
    </div>
    <div>
        <%= form.label :deposit %>
        <%= form.number_field :deposit, min: 0 %>
    </div>
    <div>
        <%= form.label :from %>
        <%= form.date_field :from %>
    </div>
    <div>
        <%= form.label :to %>
        <%= form.date_field :to %>
    </div>
    <div>
        <%= form.label :delivery %>
        <%= form.text_area :delivery %>
    </div>
    <div>
        <%= form.label :min_rental %>
        <%= form.number_field :min_rental %>
    </div>

    <% @condition.each do |option| %>
        <div>
            <%= form.radio_button :condition, option %>
            <%= form.label "condition_#{option}".to_sym, option %>
        <div>
    <% end %>

    <div>
        <%= form.submit %>
    </div>
<% end %>


    
    
    
    
    
    